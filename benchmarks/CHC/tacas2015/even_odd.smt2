(set-logic HORN)
(declare-fun P2 (Int) Bool)
(declare-fun P1 (Int Int) Bool)
(declare-fun P0 (Int) Bool)
(declare-fun P3 (Int Int) Bool)
(assert (forall ((x1 Int) (x0 Int)) (=> (and (P2 x1) (> x0 0) (= x1 0)) (P3 x1 x0))))
